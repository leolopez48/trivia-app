<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/cardviewL"
    >


    <RelativeLayout
        android:id="@+id/RelativeLayoutcardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/man" />

        <TextView
            android:id="@+id/nombreUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgUser"
            android:text="Nombre"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/puntosUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombreUser"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/imgUser"
            android:text="Puntos: 1050"
            android:textColor="#a9a9a9"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/rankUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Rank 1"
            android:textColor="#a9a9a9"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/imgCrown"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/rankUser"
            android:scaleType="centerCrop"
            android:src="@drawable/crowns" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>